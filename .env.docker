# Gita Fashion PWA - Docker Environment Variables
# Copy this to .env and update the values

# Domain Configuration
DOMAIN=your-domain.com
NEXTAUTH_URL=https://your-domain.com

# Security
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-min-32-chars

# SSL/ACME Configuration (for Traefik)
ACME_EMAIL=your-email@example.com

# Database Configuration (handled by Docker volumes)
DATABASE_URL=file:./data/sqlite.db

# App Configuration
NEXT_PUBLIC_APP_NAME=Gita Fashion
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=production

# Security Settings
SECURE_COOKIES=true
TRUST_PROXY=true

# Optional: Monitoring
WATCHTOWER_NOTIFICATIONS=slack
WATCHTOWER_NOTIFICATION_SLACK_HOOK_URL=https://hooks.slack.com/services/xxx

# Optional: Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *