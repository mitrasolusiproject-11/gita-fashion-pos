# Coolify Configuration for Gita Fashion PWA

# Build configuration
build:
  dockerfile: Dockerfile
  context: .

# Port configuration
port: 3000

# Health check
healthcheck:
  path: /api/health
  interval: 30s
  timeout: 10s
  retries: 3

# Persistent volumes
volumes:
  - source: /data
    destination: /app/data
  - source: /logs
    destination: /app/logs

# Environment variables (set in Coolify dashboard)
# NEXTAUTH_URL
# NEXTAUTH_SECRET
# DATABASE_URL
# NODE_ENV